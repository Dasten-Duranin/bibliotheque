<html>
<head>
    <meta charset="UTF-8">
    <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/jquery-ui.css') }}" type="text/css" rel="stylesheet">
    {% block style %}{% endblock style %}
    <link href="{{ asset('css/jquery-ui-theme.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/jquery-ui-structure.css') }}" type="text/css" rel="stylesheet">
    <script src="{{ asset('js/jquery2.js') }}" rel="script" type="javascript"></script>
    <script src="{{ asset('js/jquery-ui.js') }}" rel="script" type="javascript"></script>
    {% block funtions %}{% endblock funtions %}
</head>
<body>
	<div id="blockGlobal">
		<div class="header">
			<div class="section">
				<div class="container">
					<div class="logo">
						<a href="{{ path('bookcase_homepage') }}">
							<img src="{{ asset('img/logoBibliotheque.jpg') }}" />
						</a>
					</div>
					<div class="menu">
						<ul class="menuItems">
							<li class="item"><a class="link" href="{{ path('bookcase_search') }}">
								<span class="underlink"><span>Rechercher</span></span>
							</a></li>
							<li class="item"><a class="link" href="{{ path('bookcase_read') }}">
								<span class="underlink"><span>Lire</span></span>
							</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="blockBody">
			<div class="section">
				<div class="container">
					{% block body %}{% endblock body %}
					{% block javascript %}{% endblock javascript %}
				</div>
			</div>
		</div>
	</div>
</body>
</html>
